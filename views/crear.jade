extends layout

block content
    .container
        .main.container
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Crear Noticia
                form(method="post" action="/news_crear")
                    .form-group
                        label(for="titulo") Titulo:
                        input#titulo.form-control(type="text",name="titulo")
                    .form-group
                        label(for="descripcion") Descripci√≥n:
                        input#descripcion.form-control(type="text",name="descripcion")
                    .form-group
                        label(for="categoria") Categoria:
                        input#categoria.form-control(type="text",name="categoria")
                    .form-group
                        label(for="fecha") Fecha:
                        input#fecha.form-control(type="date",name="fecha")
                    button.btn.btn-primary(type="submit",style="margin:10px;") Guardar
                    
                    a.btn.btn-danger(href="/news",style="margin:10px;") Cancelar